<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="row">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t ".id" %></th>
        <th><%= t ".user_id" %></th>
        <th><%= t ".soccer_field_id" %></th>
        <th><%= t ".time_start" %></th>
        <th><%= t ".time_finish" %></th>
        <th><%= t ".price" %></th>
        <th><%= t ".created_at" %></th>
        <th><%= t ".actions" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @soccer_field_orders %>
    </tbody>
  </table>
  <%== pagy_bootstrap_nav @pagy %>
</div>
